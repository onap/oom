      <appender-ref ref="EELFDebug" />
   </appender>
   <!-- ============================================================================ -->
   <!--  EELF loggers -->
   <!-- ============================================================================ -->
   <logger name="com.att.eelf" level="debug" additivity="false">
      <appender-ref ref="asyncEELF" />
   </logger>
