make-aaf: make-aaf-cs  make-aaf-sms

make-aaf-cs:
	cd charts && helm dep up aaf-cs && helm lint aaf-cs

make-aaf-sms:
	cd charts/aaf-sms && make
	cd charts && helm dep up aaf-sms && helm lint aaf-sms

clean:
	@find . -type f -name 'requirements.lock' -delete
	@find . -type f -name '*.tgz' -delete
