{
    "service": {
      "name": "Health Check: Policy",
      "checks": [
        {
          "id": "Policy-mariadb-healthcheck",
          "name": "Policy Mariadb Health Check",
          "script": "/consul/config/scripts/policy-mariadb-script.sh",
          "interval": "10s",
          "timeout": "1s"
        },
        {
          "id": "mso-nexus-healthcheck",
          "name": "MSO Nexus Health Check",
          "script": "/consul/config/scripts/policy-nexus-script.sh",
          "interval": "10s",
          "timeout": "1s"
        },
        {
        "id": "brmsgw",
        "name": "BRMSGW Health Check",
        "script": "/consul/config/scripts/policy-brmsgw-script.sh",
        "interval": "15s",
        "timeout": "1s"
        },
        {
        "id": "drools",
        "name": "drools Health Check",
        "http": "http://drools.onap-policy:6969/healthcheck",
        "method": "GET",
        "header": {
          "Authorization": ["Basic aGVhbHRoY2hlY2s6emIhWHp0RzM0"],
          "Cache-Control": ["no-cache"],
          "Content-Type": ["application/json"],
          "Accept": ["application/json"]
        },
        "tls_skip_verify": true,
        "interval": "15s",
        "timeout": "1s"
      },
      {
        "id": "pap",
        "name": "pap Health Check",
        "http": "http://pap.onap-policy:9091/pap/test",
        "method": "GET",
        "header": {
          "Authorization": ["Basic dGVzdHBhcDphbHBoYTEyMw=="],
          "Cache-Control": ["no-cache"],
          "Content-Type": ["application/json"],
          "Accept": ["application/json"]
        },
        "tls_skip_verify": true,
        "interval": "15s",
        "timeout": "1s"
      },
      {
        "id": "pdp",
        "name": "pdp Health Check",
        "http": "http://pdp.onap-policy:8081/pdp/test",
        "method": "GET",
        "header": {
          "Authorization": ["Basic dGVzdHBkcDphbHBoYTEyMw=="],
          "Cache-Control": ["no-cache"],
          "Content-Type": ["application/json"],
          "Accept": ["application/json"]
        },
        "tls_skip_verify": true,
        "interval": "15s",
        "timeout": "1s"
      }
      ]
    }
  }