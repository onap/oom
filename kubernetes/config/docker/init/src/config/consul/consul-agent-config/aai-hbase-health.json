{
  "service": {
    "name": "A&AI HBase Health Check",
    "checks": [
      {
        "id": "hbase-aai",
        "name": "HBase Health Check",
        "http": "http://hbase.onap-aai:8080/status/cluster",
        "method": "GET",
        "header": {
          "Cache-Control": ["no-cache"],
          "Content-Type": ["application/json"],
          "Accept": ["application/json"]
        },
        "tls_skip_verify": true,
        "interval": "15s",
        "timeout": "1s"
      }
    ]
  }
}
