if [ "$1" == "y" ] && [ "$3" == "..data" ]; then
  echo "$(date) | INFO | Configmap has been reloaded"
  cd /config-input
  for file in $(ls -1); do
    if [ "$file" -nt "/config/$file" ]; then
      echo "$(date) | INFO | Templating /config/$file"
      envsubst <$file >/config/$file
    fi
  done
fi
