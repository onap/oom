{
    "command": "designate-worker --config-file /etc/designate/designate.conf",
    "config_files": [
        {
            "source": "/var/lib/kolla/config_files/designate.conf",
            "dest": "/etc/designate/designate.conf",
            "owner": "designate",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/policy.json",
            "dest": "/etc/designate/policy.json",
            "owner": "designate",
            "perm": "0600",
            "optional": true
        },
        {
            "source": "/var/lib/kolla/config_files/pools.yaml",
            "dest": "/etc/designate/pools.yaml",
            "owner": "designate",
            "perm": "0600",
            "optional": true
        },
        {
            "source": "/var/lib/kolla/config_files/rndc.conf",
            "dest": "/etc/designate/rndc.conf",
            "owner": "designate",
            "perm": "0600",
            "optional": true
        },
        {
            "source": "/var/lib/kolla/config_files/rndc.key",
            "dest": "/etc/designate/rndc.key",
            "owner": "designate",
            "perm": "0600",
            "optional": true
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/designate",
            "owner": "designate:designate",
            "recurse": true
        }
    ]
}
