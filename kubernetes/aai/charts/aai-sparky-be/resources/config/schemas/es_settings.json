{
    "analysis": {
        "filter": {
            "ngram_filter": {
                "type": "nGram",
                "min_gram": 1,
                "max_gram": 50,
                "token_chars": [
                    "letter",
                    "digit",
                    "punctuation",
                    "symbol"
                ]
            }
        },
        "analyzer": {
            "ngram_analyzer": {
                "type": "custom",
                "tokenizer": "whitespace",
                "filter": [
                    "lowercase",
                    "asciifolding",
                    "ngram_filter"
                ]
            },
            "whitespace_analyzer": {
                "type": "custom",
                "tokenizer": "whitespace",
                "filter": [
                    "lowercase",
                    "asciifolding"
                ]
            }
        }
    }
}