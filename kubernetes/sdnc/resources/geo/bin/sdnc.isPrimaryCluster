dir=$( dirname $0 )

IS_PRIMARY_CLUSTER=`awk '/isPrimaryCluster/ {print $2}' $dir/../../../values.yaml`

if [ "$?" -eq "2" ]; then
      echo "Make sure you are ubuntu user." >&2
fi

case $IS_PRIMARY_CLUSTER in
true|false)
    echo $IS_PRIMARY_CLUSTER
    ;;
*)
    echo "NOT CLUSTERED"
    exit 1
    ;;
esac
