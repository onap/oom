
{
    "command": "/usr/sbin/named -g",
    "config_files": [
        {
            "source": "/var/lib/kolla/config_files/named.conf",
            "dest": "/etc/bind/named.conf",
            "owner": "root",
            "perm": "0660"
        },
        {
            "source": "/var/lib/kolla/config_files/rndc.conf",
            "dest": "/etc/rndc.conf",
            "owner": "root",
            "perm": "0600",
            "optional": true
        },
        {
            "source": "/var/lib/kolla/config_files/rndc.key",
            "dest": "/etc/rndc.key",
            "owner": "root",
            "perm": "0600",
            "optional": true
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/named",
            "owner": "root:root",
            "recurse": true
        }
    ]
}
