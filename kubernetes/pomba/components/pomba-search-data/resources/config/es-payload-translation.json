{
  "attr-translations": [       
    {
      "query": "$..[?(@.type=='string' && @.index=='analyzed')]",
      "update": {"type": "text", "index": true, "fielddata": true}
    },
    {
      "query": "$..[?(@.type=='string' && @.index=='not_analyzed')]",
      "update": {"type": "keyword", "index": true}
    },
    {
      "query": "$..[?(@.type=='string' && !@.index)]",
      "update": {"type": "text", "fielddata": true}
    }
  ]
}